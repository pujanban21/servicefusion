<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel_header"
        android:layout_centerHorizontal="true">
       <pujan.io.servicefusion.components.RobotCondensedBold
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="20sp"
           android:textColor="@color/service_fusion_red"
           android:text="@string/service_fusion_demo"
           android:id="@+id/header"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_first_name"
        android:layout_below="@id/rel_header"
        android:paddingTop="10dp">
        <pujan.io.servicefusion.components.RobotoCondensedRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_name"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="First Name:"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/first_name_fill"
            android:background="@drawable/rounded_corners"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="12sp"
            android:padding="3dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_last_name"
        android:layout_below="@id/rel_first_name"
        android:paddingTop="10dp">
        <pujan.io.servicefusion.components.RobotoCondensedRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/last_name"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="Last Name:"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/last_name_fill"
            android:background="@drawable/rounded_corners"
            android:maxLines="1"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:textSize="12sp"
            android:padding="3dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_date_of_birth"
        android:layout_below="@id/rel_last_name"
        android:paddingTop="10dp">
        <pujan.io.servicefusion.components.RobotoCondensedRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/date_of_birth"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="Date Of Birth:"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/date_of_birth_fill"
            android:background="@drawable/rounded_corners"
            android:maxLines="1"
            android:inputType="date"
            android:hint="Date Of Birth"
            android:textSize="12sp"
            android:padding="3dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_zip_code"
        android:layout_below="@id/rel_date_of_birth"
        android:paddingTop="10dp">
        <pujan.io.servicefusion.components.RobotoCondensedRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/zip_code"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="Zip Code:"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/zip_code_fill"
            android:background="@drawable/rounded_corners"
            android:maxLines="1"
            android:inputType="numberDecimal"
            android:hint="Zip Code"
            android:textSize="12sp"
            android:padding="3dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_email"
        android:layout_below="@id/rel_zip_code"
        android:paddingTop="10dp">
        <pujan.io.servicefusion.components.RobotoCondensedRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="Email:"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/email_fill"
            android:background="@drawable/rounded_corners"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textSize="12sp"
            android:padding="3dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_password"
        android:layout_below="@id/rel_email"
        android:paddingTop="10dp">
        <pujan.io.servicefusion.components.RobotoCondensedRegular
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:text="Password:"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/password_fill"
            android:background="@drawable/rounded_corners"
            android:maxLines="1"
            android:hint="Password"
            android:inputType="textPassword"
            android:textSize="12sp"
            android:padding="3dp"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel_save"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rel_password"
        android:paddingTop="20dp">
        <pujan.io.servicefusion.components.RobotCondensedBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_button"
            android:text="SAVE"
            android:textColor="@color/service_fusion_red"
            android:textSize="20sp"/>
    </LinearLayout>
</RelativeLayout>
